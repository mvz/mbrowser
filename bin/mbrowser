#!/usr/bin/env ruby
# frozen_string_literal: true

require 'mbrowser'

require 'gir_ffi-gtk3'

GirFFI.setup :WebKit2
Gtk.init

win = Gtk::Window.new :toplevel
vbox = Gtk::Box.new :vertical, 0
win.add vbox
wv = WebKit2::WebView.new
vbox.add wv
wv.vexpand = true
win.show_all
wv.load_uri(ARGV[0])
win.signal_connect('destroy') { Gtk.main_quit }
Gtk.main
