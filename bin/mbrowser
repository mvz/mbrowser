#!/usr/bin/env ruby

require "mbrowser"

require 'webkit2-gtk'

Gtk.init

win = Gtk::Window.new :toplevel
vbox = Gtk::Box.new :vertical, 0
win.add vbox
wv = WebKit2Gtk::WebView.new
vbox.add wv
wv.vexpand = true
win.show_all
wv.load_uri(ARGV[0])
win.signal_connect('destroy') { Gtk.main_quit }
Gtk.main
